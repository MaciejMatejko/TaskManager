{% extends '::base.html.twig' %}

{% block title %}{{ team.name }}{% endblock %}

{% block body %}
    <div><h2>Info:</h2>
        <p>{{ team.name }}</p>
        <p>{{ team.description }}</p>
    </div>
    <div><h2>Team members:</h2>
        <ul>
        {% for user in team.users %}
            <li>{{ user.username }}</li>
        {% else %}
            <p>No users found</p>
        {% endfor %}
        </ul>
    </div>
   {% if is_granted('ROLE_MANAGER') %}
       <p><a href="{{ path("app_team_edit", {"id":team.id}) }}">Edit</a></p>
       <p><a href="{{ path("app_team_delete", {"id":team.id}) }}">Delete</a></p>
    {% endif%}
{% endblock %}
